// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  name      String @db.VarChar(80)
  email     String @db.VarChar(80) @unique
  password  String
  createdAt DateTime

  @@map("users")
}

model State {
  id        Int @id @default(autoincrement())
  name      String
  createdAt DateTime

  @@map("states")
}